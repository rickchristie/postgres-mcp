{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pgflock: Up Containers",
      "type": "shell",
      "command": "pgflock",
      "args": ["up"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true
      },
      "problemMatcher": []
    },
    {
      "label": "gowt: Test All",
      "type": "shell",
      "command": "gowt",
      "args": ["./..."],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Build CLI",
      "type": "shell",
      "command": "go",
      "args": ["build", "-o", "${workspaceFolder}/gopgmcp", "./cmd/gopgmcp"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "never",
        "panel": "shared",
        "focus": false,
        "close": true
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Release",
      "type": "shell",
      "command": "bash",
      "args": ["scripts/release.sh"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true
      },
      "problemMatcher": []
    }
  ]
}
